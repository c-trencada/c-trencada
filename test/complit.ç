#inclou "test.cç"

def_tipus estructura Arbre {
  enter val;
  estructura Arbre *lhs;
  estructura Arbre *rhs;
} Arbre;

Arbre *arbre = &(Arbre){
  1,
  &(Arbre){
    2,
    &(Arbre){ 3, 0, 0 },
    &(Arbre){ 4, 0, 0 }
  },
  0
};

enter principal() {
  AFIRMA(1, (enter){1});
  AFIRMA(2, ((enter[]){0,1,2})[2]);
  AFIRMA('a', ((estructura {caràcter a; enter b;}){'a', 3}).a);
  AFIRMA(3, ({ enter x=3; (enter){x}; }));
  (enter){3} = 5;

  AFIRMA(1, arbre->val);
  AFIRMA(2, arbre->lhs->val);
  AFIRMA(3, arbre->lhs->lhs->val);
  AFIRMA(4, arbre->lhs->rhs->val);

  imprimeix("OK\n");
  retorna 0;
}
