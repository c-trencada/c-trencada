#inclou "test.cç"

enter principal() {
  AFIRMA(1, mida_de(caràcter));
  AFIRMA(2, mida_de(curt));
  AFIRMA(2, mida_de(curt enter));
  AFIRMA(2, mida_de(enter curt));
  AFIRMA(4, mida_de(enter));
  AFIRMA(8, mida_de(llarg));
  AFIRMA(8, mida_de(llarg enter));
  AFIRMA(8, mida_de(llarg enter));
  AFIRMA(8, mida_de(caràcter *));
  AFIRMA(8, mida_de(enter *));
  AFIRMA(8, mida_de(llarg *));
  AFIRMA(8, mida_de(enter **));
  AFIRMA(8, mida_de(enter(*)[4]));
  AFIRMA(32, mida_de(enter*[4]));
  AFIRMA(16, mida_de(enter[4]));
  AFIRMA(48, mida_de(enter[3][4]));
  AFIRMA(8, mida_de(estructura {enter a; enter b;}));

  AFIRMA(8, mida_de(-10 + (llarg)5));
  AFIRMA(8, mida_de(-10 - (llarg)5));
  AFIRMA(8, mida_de(-10 * (llarg)5));
  AFIRMA(8, mida_de(-10 / (llarg)5));
  AFIRMA(8, mida_de((llarg)-10 + 5));
  AFIRMA(8, mida_de((llarg)-10 - 5));
  AFIRMA(8, mida_de((llarg)-10 * 5));
  AFIRMA(8, mida_de((llarg)-10 / 5));

  AFIRMA(1, ({ caràcter i; mida_de(++i); }));
  AFIRMA(1, ({ caràcter i; mida_de(i++); }));

  AFIRMA(8, mida_de(enter(*)[10]));
  AFIRMA(8, mida_de(enter(*)[][10]));

  AFIRMA(4, mida_de(estructura { enter x, y[]; }));

  AFIRMA(1, mida_de(caràcter));
  AFIRMA(1, mida_de(amb_signe caràcter));
  AFIRMA(1, mida_de(amb_signe caràcter amb_signe));
  AFIRMA(1, mida_de(sense_signe caràcter));
  AFIRMA(1, mida_de(sense_signe caràcter sense_signe));

  AFIRMA(2, mida_de(curt));
  AFIRMA(2, mida_de(enter curt));
  AFIRMA(2, mida_de(curt enter));
  AFIRMA(2, mida_de(amb_signe curt));
  AFIRMA(2, mida_de(enter curt amb_signe));
  AFIRMA(2, mida_de(sense_signe curt));
  AFIRMA(2, mida_de(enter curt sense_signe));

  AFIRMA(4, mida_de(enter));
  AFIRMA(4, mida_de(amb_signe enter));
  AFIRMA(4, mida_de(amb_signe));
  AFIRMA(4, mida_de(amb_signe amb_signe));
  AFIRMA(4, mida_de(sense_signe enter));
  AFIRMA(4, mida_de(sense_signe));
  AFIRMA(4, mida_de(sense_signe sense_signe));

  AFIRMA(8, mida_de(llarg));
  AFIRMA(8, mida_de(amb_signe llarg));
  AFIRMA(8, mida_de(amb_signe llarg enter));
  AFIRMA(8, mida_de(sense_signe llarg));
  AFIRMA(8, mida_de(sense_signe llarg enter));

  AFIRMA(8, mida_de(llarg llarg));
  AFIRMA(8, mida_de(amb_signe llarg llarg));
  AFIRMA(8, mida_de(amb_signe llarg llarg enter));
  AFIRMA(8, mida_de(sense_signe llarg llarg));
  AFIRMA(8, mida_de(sense_signe llarg llarg enter));

  AFIRMA(1, mida_de((caràcter)1));
  AFIRMA(2, mida_de((curt)1));
  AFIRMA(4, mida_de((enter)1));
  AFIRMA(8, mida_de((llarg)1));

  AFIRMA(4, mida_de((caràcter)1 + (caràcter)1));
  AFIRMA(4, mida_de((curt)1 + (curt)1));
  AFIRMA(4, mida_de(1?2:3));
  AFIRMA(4, mida_de(1?(curt)2:(caràcter)3));
  AFIRMA(8, mida_de(1?(llarg)2:(caràcter)3));

  AFIRMA(1, mida_de(caràcter) << 31 >> 31);
  AFIRMA(1, mida_de(caràcter) << 63 >> 63);

  AFIRMA(4, mida_de(flot));
  AFIRMA(8, mida_de(doble));

  AFIRMA(4, mida_de(1f+2));
  AFIRMA(8, mida_de(1.0+2));
  AFIRMA(4, mida_de(1f-2));
  AFIRMA(8, mida_de(1.0-2));
  AFIRMA(4, mida_de(1f*2));
  AFIRMA(8, mida_de(1.0*2));
  AFIRMA(4, mida_de(1f/2));
  AFIRMA(8, mida_de(1.0/2));

  AFIRMA(16, mida_de(llarg doble));

  AFIRMA(1, mida_de(principal));

  imprimeix("OK\n");
  retorna 0;
}
