#inclou "test.cç"

enter principal() {
  AFIRMA(1, ({ estructura {enter a; enter b;} estructura_valor; estructura_valor.a=1; estructura_valor.b=2; estructura_valor.a; }));
  AFIRMA(2, ({ estructura {enter a; enter b;} estructura_valor; estructura_valor.a=1; estructura_valor.b=2; estructura_valor.b; }));
  AFIRMA(1, ({ estructura {caràcter a; enter b; caràcter c;} estructura_valor; estructura_valor.a=1; estructura_valor.b=2; estructura_valor.c=3; estructura_valor.a; }));
  AFIRMA(2, ({ estructura {caràcter a; enter b; caràcter c;} estructura_valor; estructura_valor.b=1; estructura_valor.b=2; estructura_valor.c=3; estructura_valor.b; }));
  AFIRMA(3, ({ estructura {caràcter a; enter b; caràcter c;} estructura_valor; estructura_valor.a=1; estructura_valor.b=2; estructura_valor.c=3; estructura_valor.c; }));

  AFIRMA(0, ({ estructura {caràcter a; caràcter b;} taula[3]; caràcter *punter=taula; punter[0]=0; taula[0].a; }));
  AFIRMA(1, ({ estructura {caràcter a; caràcter b;} taula[3]; caràcter *punter=taula; punter[1]=1; taula[0].b; }));
  AFIRMA(2, ({ estructura {caràcter a; caràcter b;} taula[3]; caràcter *punter=taula; punter[2]=2; taula[1].a; }));
  AFIRMA(3, ({ estructura {caràcter a; caràcter b;} taula[3]; caràcter *punter=taula; punter[3]=3; taula[1].b; }));

  AFIRMA(6, ({ estructura {caràcter a[3]; caràcter b[5];} estructura_valor; caràcter *punter=&estructura_valor; estructura_valor.a[0]=6; punter[0]; }));
  AFIRMA(7, ({ estructura {caràcter a[3]; caràcter b[5];} estructura_valor; caràcter *punter=&estructura_valor; estructura_valor.b[0]=7; punter[3]; }));

  AFIRMA(6, ({ estructura { estructura { caràcter b; } a; } estructura_valor; estructura_valor.a.b=6; estructura_valor.a.b; }));

  AFIRMA(4, ({ estructura {enter a;} estructura_valor; mida_de(estructura_valor); }));
  AFIRMA(8, ({ estructura {enter a; enter b;} estructura_valor; mida_de(estructura_valor); }));
  AFIRMA(8, ({ estructura {enter a, b;} estructura_valor; mida_de(estructura_valor); }));
  AFIRMA(12, ({ estructura {enter a[3];} estructura_valor; mida_de(estructura_valor); }));
  AFIRMA(16, ({ estructura {enter a;} taula[4]; mida_de(taula); }));
  AFIRMA(24, ({ estructura {enter a[3];} taula[2]; mida_de(taula); }));
  AFIRMA(2, ({ estructura {caràcter a; caràcter b;} estructura_valor; mida_de(estructura_valor); }));
  AFIRMA(0, ({ estructura {} estructura_valor; mida_de(estructura_valor); }));
  AFIRMA(8, ({ estructura {caràcter a; enter b;} estructura_valor; mida_de(estructura_valor); }));
  AFIRMA(8, ({ estructura {enter a; caràcter b;} estructura_valor; mida_de(estructura_valor); }));

  AFIRMA(8, ({ estructura tipus {enter a; enter b;} estructura_primer; estructura tipus estructura_segon; mida_de(estructura_segon); }));
  AFIRMA(8, ({ estructura tipus {enter a; enter b;}; estructura tipus estructura_segon; mida_de(estructura_segon); }));
  AFIRMA(2, ({ estructura tipus {caràcter a[2];}; { estructura tipus {caràcter a[4];}; } estructura tipus estructura_segon; mida_de(estructura_segon); }));
  AFIRMA(3, ({ estructura tipus {enter membre_x;}; enter variable_tipus=1; estructura tipus estructura_segon; estructura_segon.membre_x=2; variable_tipus+estructura_segon.membre_x; }));

  AFIRMA(3, ({ estructura tipus {caràcter a;} estructura_primer; estructura tipus *punter_segon = &estructura_primer; estructura_primer.a=3; punter_segon->a; }));
  AFIRMA(3, ({ estructura tipus {caràcter a;} estructura_primer; estructura tipus *punter_segon = &estructura_primer; punter_segon->a=3; estructura_primer.a; }));

  AFIRMA(3, ({ estructura {enter a,b;} estructura_primer,estructura_segon; estructura_primer.a=3; estructura_segon=estructura_primer; estructura_segon.a; }));
  AFIRMA(7, ({ estructura tipus {enter a,b;}; estructura tipus estructura_primer; estructura_primer.a=7; estructura tipus estructura_segon; estructura tipus *punter_tercer=&estructura_segon; *punter_tercer=estructura_primer; estructura_segon.a; }));
  AFIRMA(7, ({ estructura tipus {enter a,b;}; estructura tipus estructura_primer; estructura_primer.a=7; estructura tipus estructura_segon, *punter_primer=&estructura_primer, *punter_segon=&estructura_segon; *punter_segon=*punter_primer; estructura_segon.a; }));
  AFIRMA(5, ({ estructura tipus {caràcter a, b;} estructura_primer, estructura_segon; estructura_primer.a=5; estructura_segon=estructura_primer; estructura_segon.a; }));

  AFIRMA(3, ({ estructura {enter a,b;} estructura_primer,estructura_segon; estructura_primer.a=3; estructura_segon=estructura_primer; estructura_segon.a; }));
  AFIRMA(7, ({ estructura tipus {enter a,b;}; estructura tipus estructura_primer; estructura_primer.a=7; estructura tipus estructura_segon; estructura tipus *punter_tercer=&estructura_segon; *punter_tercer=estructura_primer; estructura_segon.a; }));
  AFIRMA(7, ({ estructura tipus {enter a,b;}; estructura tipus estructura_primer; estructura_primer.a=7; estructura tipus estructura_segon, *punter_primer=&estructura_primer, *punter_segon=&estructura_segon; *punter_segon=*punter_primer; estructura_segon.a; }));
  AFIRMA(5, ({ estructura tipus {caràcter a, b;} estructura_primer, estructura_segon; estructura_primer.a=5; estructura_segon=estructura_primer; estructura_segon.a; }));

  AFIRMA(8, ({ estructura tipus {enter a; enter b;} estructura_primer; estructura tipus estructura_segon; mida_de(estructura_segon); }));
  AFIRMA(8, ({ estructura tipus {enter a; enter b;}; estructura tipus estructura_segon; mida_de(estructura_segon); }));

  AFIRMA(16, ({ estructura {caràcter a; llarg b;} estructura_valor; mida_de(estructura_valor); }));
  AFIRMA(4, ({ estructura {caràcter a; curt b;} estructura_valor; mida_de(estructura_valor); }));

  AFIRMA(8, ({ estructura prova *prova_bar; mida_de(prova_bar); }));
  AFIRMA(4, ({ estructura Tipus *prova; estructura Tipus {enter membre_x;}; mida_de(estructura Tipus); }));
  AFIRMA(1, ({ estructura Tipus { estructura Tipus *següent; enter membre_x; } estructura_primer; estructura Tipus estructura_segon; estructura_segon.membre_x=1; estructura_primer.següent=&estructura_segon; estructura_primer.següent->membre_x; }));
  AFIRMA(4, ({ def_tipus estructura Tipus Tipus; estructura Tipus { enter membre_x; }; mida_de(Tipus); }));

  AFIRMA(2, ({ estructura {enter a;} estructura_primer={1}, estructura_segon={2}; (estructura_primer=estructura_segon).a; }));
  AFIRMA(1, ({ estructura {enter a;} estructura_primer={1}, estructura_segon={2}; (1?estructura_primer:estructura_segon).a; }));
  AFIRMA(2, ({ estructura {enter a;} estructura_primer={1}, estructura_segon={2}; (0?estructura_primer:estructura_segon).a; }));

  imprimeix("OK\n");
  retorna 0;
}
