  AFIRMA(1, -2 <= (llarg)-1);
  AFIRMA(0, -2 > (llarg)-1);
  AFIRMA(0, -2 >= (llarg)-1);

  AFIRMA(1, (llarg)-2 < -1);
  AFIRMA(1, (llarg)-2 <= -1);
  AFIRMA(0, (llarg)-2 > -1);
  AFIRMA(0, (llarg)-2 >= -1);

