#inclou "test.cç"

enter principal() {
  AFIRMA(20, ({ enter nombre=5; enter taula[nombre]; mida_de(taula); }));
  AFIRMA((5+1)*(8*2)*4, ({ enter m=5, nombre=8; enter taula[m+1][nombre*2]; mida_de(taula); }));

  AFIRMA(8, ({ caràcter nombre=10; enter (*punter)[nombre][nombre+2]; mida_de(punter); }));
  AFIRMA(480, ({ caràcter nombre=10; enter (*punter)[nombre][nombre+2]; mida_de(*punter); }));
  AFIRMA(48, ({ caràcter nombre=10; enter (*punter)[nombre][nombre+2]; mida_de(**punter); }));
  AFIRMA(4, ({ caràcter nombre=10; enter (*punter)[nombre][nombre+2]; mida_de(***punter); }));

  AFIRMA(60, ({ caràcter nombre=3; enter taula[5][nombre]; mida_de(taula); }));
  AFIRMA(12, ({ caràcter nombre=3; enter taula[5][nombre]; mida_de(*taula); }));

  AFIRMA(60, ({ caràcter nombre=3; enter taula[nombre][5]; mida_de(taula); }));
  AFIRMA(20, ({ caràcter nombre=3; enter taula[nombre][5]; mida_de(*taula); }));

  AFIRMA(0, ({ enter nombre=10; enter taula[nombre+1][nombre+6]; enter *punter=taula; per (enter índex = 0; índex<mida_de(taula)/4; índex++) punter[índex]=índex; taula[0][0]; }));
  AFIRMA(5, ({ enter nombre=10; enter taula[nombre+1][nombre+6]; enter *punter=taula; per (enter índex = 0; índex<mida_de(taula)/4; índex++) punter[índex]=índex; taula[0][5]; }));
  AFIRMA(5*16+2, ({ enter nombre=10; enter taula[nombre+1][nombre+6]; enter *punter=taula; per (enter índex = 0; índex<mida_de(taula)/4; índex++) punter[índex]=índex; taula[5][2]; }));

  AFIRMA(10, ({ enter nombre=5; mida_de(caràcter[2][nombre]); }));

  imprimeix("OK\n");
  retorna 0;
}
